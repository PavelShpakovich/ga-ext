{
  "manifest_version": 3,
  "name": "Grammar Assistant",
  "version": "0.1.4",
  "author": "Pavel Shpakovich",
  "description": "Privacy-first AI-powered grammar correction for better writing",
  "homepage_url": "https://github.com/PavelShpakovich/ext-ga",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["activeTab", "contextMenus", "sidePanel", "storage"],
  "host_permissions": ["<all_urls>", "https://huggingface.co/*", "https://*.huggingface.co/*"],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "commands": {
    "correct-text": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Correct selected text with AI"
    }
  }
}
