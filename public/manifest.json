{
  "manifest_version": 3,
  "name": "Grammar Assistant - Privacy-First AI That Runs Locally",
  "version": "0.4.2",
  "author": "Pavel Shpakovich",
  "description": "Free AI grammar correction that runs locally in your browser. Private, fast, and works offline.",
  "homepage_url": "https://github.com/PavelShpakovich/ext-ga",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["activeTab", "contextMenus", "sidePanel", "storage", "offscreen"],
  "host_permissions": ["https://huggingface.co/*", "https://*.huggingface.co/*", "https://cdn.huggingface.co/*"],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "tesseract/core/worker.min.js",
        "tesseract/core/tesseract-core.wasm.js",
        "tesseract/core/tesseract-core.wasm",
        "tesseract/core/tessdata/*.traineddata"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "correct-text": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Correct selected text with AI"
    }
  }
}
